{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "strict": true,
    "target": "esnext",
    "outDir": "build",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "__mocks__/**/*.ts",
    "shims.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}